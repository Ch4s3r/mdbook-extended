{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "regexManagers": [
    {
      "description": "Update cargo install versions in Dockerfile",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "(?<depName>\\S+)@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "crate"
    }
  ],
  "prHourlyLimit": 0,
  "prCreation": "immediate",
}